enic habitat alterations continue.", "access_right": "restricted", "creators": [{"name": "Seltmann, Anne", "affiliation": null}, {"name": "Czirj\u00e1k, G\u00e1bor \u00c1.", "affiliation": null}, {"name": "Courtiol, Alexandre", "affiliation": null}, {"name": "Bernard, Henry", "affiliation": null}, {"name": "Struebig, Matthew J.", "affiliation": null}, {"name": "Voigt, Christian C.", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/d702cb9664c098ee8386254c6ebf7e1e", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/f4eba6e264d9fbb54e03f1e62291234ba55b18731a340bbbff502f031aff908c", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/H5K7YLJJ", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/H5K7YLJJ", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/482d1584d59cc1690795cd35fd413392!/b173240-175914", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/330417efcaa2560c9b8ebcd6fae17ce0", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "1", "pages": "cox020", "title": "Conservation Physiology", "volume": "5"}, "alternate_identifiers": [{"identifier": "hash://md5/d702cb9664c098ee8386254c6ebf7e1e"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:H5K7YLJJ"}, {"identifier": "10.1093/conphys/cox020"}], "communities": [{"id": "biosyslit"}, {"id": "batlit"}], "relations": {"version": [{"index": 0, "is_last": true, "par