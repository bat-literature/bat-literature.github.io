ated landscapes.", "access_right": "restricted", "creators": [{"name": "Rocha, Ricardo", "affiliation": null}, {"name": "Ovaskainen, Otso", "affiliation": null}, {"name": "L\u00f3pez-Baucells, Adri\u00e0", "affiliation": null}, {"name": "Farneda, F\u00e1bio Z.", "affiliation": null}, {"name": "Sampaio, Erica M.", "affiliation": null}, {"name": "Bobrowiec, Paulo E. D.", "affiliation": null}, {"name": "Cabeza, Mar", "affiliation": null}, {"name": "Palmeirim, Jorge M.", "affiliation": null}, {"name": "Meyer, Christoph F. J.", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/e46ed644bd9d89376f241b6370983eb1", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/9e680a934d78e97bf131d4141f866ca860b65cb6efab6a47e89757034e887ca3", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/LBKXEM7E", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/LBKXEM7E", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/73e42c43c4bb4936c31a7c6da3d7ee2a!/b34645-37106", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/26f7ce5dd404e33c6570edd4ba250d20", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "1", "pages": "3819", "title": "Scientific Reports", "volume": "8"}, "alternate_identifiers": [{"identifier": "hash://md5/e46ed644bd9d89376f241b6370983eb1"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:LBKXEM7E"}, {"identifier": "10.1038/s