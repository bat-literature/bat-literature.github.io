cale.", "access_right": "restricted", "creators": [{"name": "Sullivan, Jennifer", "affiliation": null}, {"name": "Huth, Lauren", "affiliation": null}, {"name": "Meers, Joanne", "affiliation": null}, {"name": "McMichael, Lee", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/0ff76d449dfd4e05c2b4fcdaf346184b", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/82fd662b86e01f21ff40c31020f8b0386f3221fdaf7266c093e528f64ac86c6d", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/IULF7ZD7", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/IULF7ZD7", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/d358545aa82975451ee97f2c43bc8a61!/b51874-54343", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/ce1e7618f237ff56e74d51f496e811a3", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "3", "title": "Journal of Wildlife Diseases", "volume": "59"}, "alternate_identifiers": [{"identifier": "hash://md5/0ff76d449dfd4e05c2b4fcdaf346184b"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:IULF7ZD7"}, {"identifier": "10.7589/JWD-D-22-00082"}], "communities": [{"id": "batlit"}, {"id": "biosyslit"}], "relations": {"version": [{"index": 0, "is_last": true, "parent": {"pid_type": "recid", "pid_value": "13426837"}}]}}, "title": "Presence of Multiple Herpesvirus Variants in Australian Flying Foxes (Pteropus spp.)", "links": {"self": "h