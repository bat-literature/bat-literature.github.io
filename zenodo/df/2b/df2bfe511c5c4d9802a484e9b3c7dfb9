ective alternative.", "access_right": "restricted", "creators": [{"name": "Ashrafi, S.", "affiliation": null}, {"name": "Bontadina, F.", "affiliation": null}, {"name": "Kiefer, A.", "affiliation": null}, {"name": "Pavlinic, I.", "affiliation": null}, {"name": "Arlettaz, R.", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/4925c3ba34d8cfbbc84bdc54c578ef07", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/077bea6694963dec12ed651472b3cdb98227c08be12bb0dd2e3837fbd8cea79a", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/36RNLPX2", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/36RNLPX2", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/eb341f4dbdd921bdcd0fa863efecb828!/b212517-215077", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/330417efcaa2560c9b8ebcd6fae17ce0", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "4", "pages": "241-248", "title": "Journal of Zoology", "volume": "281"}, "alternate_identifiers": [{"identifier": "hash://md5/4925c3ba34d8cfbbc84bdc54c578ef07"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:36RNLPX2"}, {"identifier": "10.1111/j.1469-7998.2010.00697.x"}], "communities": [{"id": "biosyslit"}, {"id": "batlit"}], "relations": {"version": [{"index": 0, "is_last": true, "parent": {"pid_type": "recid", "pid_value": "13417155"}}]}}, "title": "Multiple morphological characters 