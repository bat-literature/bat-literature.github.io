ons.", "access_right": "restricted", "creators": [{"name": "Alves, Fernanda Moreira", "affiliation": null}, {"name": "Lisboa, Cristiane Varella", "affiliation": null}, {"name": "Dario, Maria Augusta", "affiliation": null}, {"name": "Novaes, Roberto Leonan Morim", "affiliation": null}, {"name": "Tiepolo, Liliani Marilia", "affiliation": null}, {"name": "Moratelli, Ricardo", "affiliation": null}, {"name": "Jansen, Ana Maria", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/24f964eb1435938b2be703476ff93ca4", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/12546b1d83b0150b7e980f21aa892c9732e57b8eeb796648a52825734d0392bc", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/YF2KJ3CW", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/YF2KJ3CW", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/b9095d7db72b3b9dbddb4eb99f874a56!/b81453-83910", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/330417efcaa2560c9b8ebcd6fae17ce0", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "1", "pages": "71", "title": "Pathogens", "volume": "12"}, "alternate_identifiers": [{"identifier": "hash://md5/24f964eb1435938b2be703476ff93ca4"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:YF2KJ3CW"}, {"identifier": "10.3390/pathogens12010071"}], "communities": [{"id": "biosyslit"}, {"id": "batlit"}], "relations": {"version": [{"index"