andscapes.", "access_right": "restricted", "creators": [{"name": "Mollier, Sylvain", "affiliation": null}, {"name": "Kunstler, Georges", "affiliation": null}, {"name": "Dupouey, Jean-Luc", "affiliation": null}, {"name": "Berg\u00e8s, Laurent", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/7dd8ec3a23f5b49ddecae0285b84b417", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/ceee4944aa65b79b830a9f62c315830a23c26d96a3363cc04d66e8760e9c70ce", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/Y4FKAYRY", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/Y4FKAYRY", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/a7a9ef34a8f5c61e5604ecd8e3bd0a12!/b346644-349111", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/330417efcaa2560c9b8ebcd6fae17ce0", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"pages": "109544", "title": "Biological Conservation", "volume": "269"}, "alternate_identifiers": [{"identifier": "hash://md5/7dd8ec3a23f5b49ddecae0285b84b417"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:Y4FKAYRY"}, {"identifier": "10.1016/j.biocon.2022.109544"}], "communities": [{"id": "batlit"}, {"id": "biosyslit"}], "relations": {"version": [{"index": 0, "is_last": true, "parent": {"pid_type": "recid", "pid_value": "13444162"}}]}}, "title": "Historical landscape matters for threatened species in French mountain forests",