 impacts.", "access_right": "restricted", "creators": [{"name": "Wolf, Tiffany M.", "affiliation": null}, {"name": "Annie Wang, Wenchun", "affiliation": null}, {"name": "Lonsdorf, Elizabeth V.", "affiliation": null}, {"name": "Gillespie, Thomas R.", "affiliation": null}, {"name": "Pusey, Anne", "affiliation": null}, {"name": "Gilby, Ian C.", "affiliation": null}, {"name": "Travis, Dominic A.", "affiliation": null}, {"name": "Singer, Randall S.", "affiliation": null}], "keywords": ["agent-based modelling", "apes", "disease ecology", "disease transmission", "network model", "respiratory disease", "syndromic surveillance", "wildlife surveillance", "Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/9b9c4df00f6c599b5bf71ac833491ceb", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/6238b1dc80e44b6b8148a9648f4bc317b08874128d2372822f83b08b39621ab8", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/KZRPBK9J", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/KZRPBK9J", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/9137f1630fa3240d34903ba1b8b94fec!/b17074-19657", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/ce1e7618f237ff56e74d51f496e811a3", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "3", "pages": "509-518", "title": "The Journal of Applied Ecology", "volume": "56"}, "alternate_identifiers": [{"identifier": "hash://md5/9b9c4df00f6c599b5bf71ac833