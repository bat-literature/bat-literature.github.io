els.", "access_right": "restricted", "creators": [{"name": "Jenkins, Richard K. B.", "affiliation": null}, {"name": "Racey, Paul A.", "affiliation": null}, {"name": "Andriafidison, Daudet", "affiliation": null}, {"name": "Razafindrakoto, Noromampiandra", "affiliation": null}, {"name": "Razafimahatratra, Emilienne", "affiliation": null}, {"name": "Rabearivelo, Andriamanana", "affiliation": null}, {"name": "Ratsimandresy, Zo", "affiliation": null}, {"name": "Andrianandrasana, Rabe H.", "affiliation": null}, {"name": "Razafimanahaka, H. Julie", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/af0c37163be6fad9ad37d776ec092a39", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/80f03c971bb4c94cfd274ff4b37894e6474d6dd1a3cd18ce2d3e77bf5ea2c7fe", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/MULD5B3F", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/MULD5B3F", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/d4e26eadb17d30777de6db92d91d94ab!/b287893-290356", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/330417efcaa2560c9b8ebcd6fae17ce0", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "2", "pages": "263-271", "title": "Oryx", "volume": "41"}, "alternate_identifiers": [{"identifier": "hash://md5/af0c37163be6fad9ad37d776ec092a39"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:MULD5B3F"}, {"identifier":