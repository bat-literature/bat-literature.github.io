 processes.", "access_right": "restricted", "creators": [{"name": "Zhang, Yijian", "affiliation": null}, {"name": "Zhu, Tengteng", "affiliation": null}, {"name": "Wang, Lina", "affiliation": null}, {"name": "Pan, Yi Hsuan", "affiliation": null}, {"name": "Zhang, Shuyi", "affiliation": null}], "keywords": ["Transcriptome", "Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/68ca002e0131154841b98f2cd0d5022e", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/9f54db26c9943ca34fef630d6d7637c6d64ac76c56eeedd6a53668075cc135b1", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/G2N3MCMT", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/G2N3MCMT", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/48146ae72b67357f7e892ae314d901f2!/b246545-248827", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/ce1e7618f237ff56e74d51f496e811a3", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "12", "pages": "1-12", "title": "PLoS ONE", "volume": "8"}, "alternate_identifiers": [{"identifier": "hash://md5/68ca002e0131154841b98f2cd0d5022e"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:G2N3MCMT"}, {"identifier": "10.1371/journal.pone.0085632"}], "communities": [{"id": "biosyslit"}, {"id": "batlit"}], "relations": {"version": [{"index": 0, "is_last": true, "parent": {"pid_type": "recid", "pid_value": "13527653"}}]}}, "title": "Homocysteine homeostasis and betaine-hom