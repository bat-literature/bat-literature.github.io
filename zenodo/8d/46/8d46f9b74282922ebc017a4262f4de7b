cosystems.", "access_right": "restricted", "creators": [{"name": "Florio, Jenna", "affiliation": null}, {"name": "Ver\u00fa, Laura M.", "affiliation": null}, {"name": "Dao, Adama", "affiliation": null}, {"name": "Yaro, Alpha S.", "affiliation": null}, {"name": "Diallo, Moussa", "affiliation": null}, {"name": "Sanogo, Zana L.", "affiliation": null}, {"name": "Samak\u00e9, Djibril", "affiliation": null}, {"name": "Huestis, Diana L.", "affiliation": null}, {"name": "Yossi, Ousman", "affiliation": null}, {"name": "Talamas, Elijah", "affiliation": null}, {"name": "Chamorro, M. Lourdes", "affiliation": null}, {"name": "Frank, J. Howard", "affiliation": null}, {"name": "Biondi, Maurizio", "affiliation": null}, {"name": "Morkel, Carsten", "affiliation": null}, {"name": "Bartlett, Charles", "affiliation": null}, {"name": "Linton, Yvonne-Marie", "affiliation": null}, {"name": "Strobach, Ehud", "affiliation": null}, {"name": "Chapman, Jason W.", "affiliation": null}, {"name": "Reynolds, Don R.", "affiliation": null}, {"name": "Faiman, Roy", "affiliation": null}, {"name": "Krajacich, Benjamin J.", "affiliation": null}, {"name": "Smith, Corey S.", "affiliation": null}, {"name": "Lehmann, Tovi", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/a48ad15be73577490f4a0a3a11ce2961", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/9130d1100af4e8d221c096e7bda3d4ee5171fb174102f7af5c501551fe0e064d", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/4SJ3KAH9", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/4SJ3KAH9", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/af14930fe036084fc9f9445964ad07fd!/b260414-262890", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/330417efca